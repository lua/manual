@Produc{

@producname{chunk}@producbody{@rep{stat @opt{@ter{;}}}}

@producname{block}@producbody{chunk}

@producname{stat}@producbody{
	varlist1 @ter{=} explist1
@OrNL	functioncall
@OrNL	@rwd{do} block @rwd{end}
@OrNL	@rwd{while} exp @rwd{do} block @rwd{end}
@OrNL	@rwd{repeat} block @rwd{until} exp
@OrNL	@rwd{if} exp @rwd{then} block
	@rep{@rwd{elseif} exp @rwd{then} block}
	@opt{@rwd{else} block} @rwd{end}
@OrNL	@rwd{return} @opt{explist1}
@OrNL	@rwd{break}
@OrNL	@rwd{for} @Nter{Name} @ter{=} exp @ter{,} exp @opt{@ter{,} exp}
	@rwd{do} block @rwd{end}
@OrNL   @rwd{for} namelist @rwd{in} explist1 @rwd{do} block @rwd{end}
@OrNL	@rwd{function} funcname funcbody
@OrNL	@rwd{local} @rwd{function} @Nter{Name} funcbody
@OrNL	@rwd{local} namelist @opt{init}
}

@producname{funcname}@producbody{@Nter{Name} @rep{@ter{.} @Nter{Name}}
                              @opt{@ter{:} @Nter{Name}}}

@producname{varlist1}@producbody{var @rep{@ter{,} var}}

@producname{var}@producbody{
	@Nter{Name}
@Or	prefixexp @ter{[} exp @ter{]}
@Or	prefixexp @ter{.} @Nter{Name}
}

@producname{namelist}@producbody{@Nter{Name} @rep{@ter{,} @Nter{Name}}}

@producname{init}@producbody{@ter{=} explist1}

@producname{explist1}@producbody{@rep{exp @ter{,}} exp}

@producname{exp}@producbody{
	@rwd{nil}
@Or	@rwd{false}
@Or	@rwd{true}
@Or	@Nter{Number}
@Or	@Nter{Literal}
@Or   @ter{@ldots}
@OrNL	function
@Or	prefixexp
@Or	tableconstructor
@Or	exp binop exp
@Or	unop exp
}

@producname{prefixexp}@producbody{var @Or functioncall @Or @ter{(} exp @ter{)}}

@producname{functioncall}@producbody{
	prefixexp args
@Or	prefixexp @ter{:} @Nter{Name} args
}

@producname{args}@producbody{
	@ter{(} @opt{explist1} @ter{)}
@Or	tableconstructor
@Or	@Nter{Literal}
}

@producname{function}@producbody{@rwd{function} funcbody}

@producname{funcbody}@producbody{@ter{(} @opt{parlist1} @ter{)} block @rwd{end}}

@producname{parlist1}@producbody{namelist @opt{@ter{,} @ter{@ldots}}
  @Or @ter{@ldots}}

@producname{tableconstructor}@producbody{@ter{@Open} @opt{fieldlist} @ter{@Close}}
@producname{fieldlist}@producbody{field @rep{fieldsep field} @opt{fieldsep}}
@producname{field}@producbody{@ter{[} exp @ter{]} @ter{=} exp @Or name @ter{=} exp @Or exp}
@producname{fieldsep}@producbody{@ter{,} @Or @ter{;}}

@producname{binop}@producbody{@ter{+} @Or @ter{-} @Or @ter{*} @Or @ter{/}
  @Or @ter{^} @Or @ter{%} @Or{}
  @ter{..} @OrNL @ter{<} @Or @ter{<=} @Or @ter{>} @Or @ter{>=}
  @Or @ter{==} @Or @ter{~=} @OrNL @rwd{and} @Or @rwd{or}}

@producname{unop}@producbody{@ter{-} @Or @rwd{not} @Or @ter{#}}

}

